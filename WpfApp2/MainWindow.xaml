<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="741">
    <Grid Margin="0,0,32,0">
        <StackPanel RenderTransformOrigin="-0.931,-0.785" Margin="10,10,195,104" Background="#FFE0D697">
            <StackPanel Height="45" Background="#FFEFEDED" Width="490" HorizontalAlignment="Center" Margin="5,5,5,0" Orientation="Horizontal">
                <Label Content="紅茶大杯" FontSize="14" Width="78" Height="34" HorizontalContentAlignment="Center" 
                       VerticalContentAlignment="Center" Background="Transparent" Foreground="#FFE22323" FontWeight="Bold"/>
                <Label Content="60元" FontSize="14" Width="85" HorizontalContentAlignment="Center" 
                       VerticalContentAlignment="Center" />
                <TextBox TextWrapping="Wrap" Width="316" Height="40" VerticalAlignment="Center" 
                         HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center" TextChanged="TextBox_TextChanged"/>
            </StackPanel>
            <StackPanel Height="45" Background="#FFEFEDED" Width="490" HorizontalAlignment="Center" Margin="5,5,5,0" Orientation="Horizontal">
                <Label Content="紅茶小杯" FontSize="14" Width="78" Height="34" HorizontalContentAlignment="Center" 
           VerticalContentAlignment="Center" Background="Transparent" Foreground="#FFE22323" FontWeight="Bold"/>
                <Label Content="40元" FontSize="14" Width="85" HorizontalContentAlignment="Center" 
           VerticalContentAlignment="Center" />
                <TextBox TextWrapping="Wrap" Width="316" Height="40" VerticalAlignment="Center" 
             HorizontalContentAlignment="Right" FontSize="14" VerticalContentAlignment="Center" TextChanged="TextBox_TextChanged"/>
            </StackPanel>


        </StackPanel>
        <Button x:Name="Olderbutton" Content="確認訂購" HorizontalAlignment="Left" Margin="541,16,0,0" VerticalAlignment="Top" Height="57" Width="140" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
